@model IEnumerable<Models.Entities.Item>

@{
    ViewBag.Title = "Items";
    Layout = "_Layout";
}

<div class="container">
    <div class="page-header">
        <h3>List of Items (@Model.Count())</h3>
        
        <div class="row">
            <div class="col-md-offset-10">
                <a href="~/Item/save" class="btn btn-default pull-right-mg">New Item</a>
            </div>
        </div>
    </div>
    
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Reservations Count</th>
            <th class="hidden-xs">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Reservations.Count</td>
                <td class="hidden-xs">
                    <a href="~/Item/edit/@item.Id" class="btn btn-primary">Edit</a>
                    <a href="~/Item/delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>